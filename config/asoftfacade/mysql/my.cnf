[mysqld]
# ---- core memory ----
innodb_buffer_pool_size         = 64M      # largest consumer
innodb_log_buffer_size          = 1M
key_buffer_size                 = 16M
# ---- per-thread ----
max_connections                 = 25       # 25 Ã— (thread_stack + sort buffer)
thread_stack                    = 128K
sort_buffer_size                = 64K
read_buffer_size                = 64K
read_rnd_buffer_size            = 64K
join_buffer_size                = 128K
# ---- caches ----
table_open_cache                = 256
table_definition_cache          = 256
# ---- optional extras ----
performance_schema              = OFF      # saves ~80 MB
innodb_stats_on_metadata        = OFF
innodb_buffer_pool_instances    = 1        # pool < 1G
